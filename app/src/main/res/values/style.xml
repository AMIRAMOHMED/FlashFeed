<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Bottom.Nav.Bar.Custom.Item.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarHeaderConfirmButton">@color/blue</item>
        <item name="materialCalendarFullscreenTheme">@style/YourCustomCalendarStyle</item>
    </style>

    <style name="YourCustomCalendarStyle" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/rounded_action_bar</item>
    </style>


</resources>